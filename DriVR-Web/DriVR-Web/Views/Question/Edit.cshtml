@model DriVR_Web.Logic.Question;
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Vraag wijzigen</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID"/>

            <div class="form-group">
                <label asp-for="QuestionText" class="control-label">Vraag tekst</label>
                <input asp-for="QuestionText" class="form-control" />
                <span asp-validation-for="QuestionText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnswerOne" class="control-label">Antwoord 1</label>
                <input asp-for="AnswerOne" class="form-control" />
                <span asp-validation-for="AnswerOne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnswerTwo" class="control-label">Antwoord 2</label>
                <input asp-for="AnswerTwo" class="form-control" />
                <span asp-validation-for="AnswerTwo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnswerThree" class="control-label">Antwoord 3</label>
                <input asp-for="AnswerThree" class="form-control" />
                <span asp-validation-for="AnswerThree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Overview">Terug naar overzicht</a>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}