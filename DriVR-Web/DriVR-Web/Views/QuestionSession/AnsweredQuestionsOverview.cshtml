@using DriVR_Web.Logic;
@{
    ViewBag.Title = "Overview";
    Layout = "~/Views/Shared/_Layout.cshtml";
    IEnumerable<Question> questions = ViewData["Questions"] as IEnumerable<Question>;
}

<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Voltooide vragensessie</title>
</head>

<body>
    <h1>Voltooide vragensessie</h1>
    <p><a asp-action="QuestionSessionOverview">Terug naar vragensessie overzicht</a></p>

    @*For displaying question info*@
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Vraag tekst
                </th>
                <th>
                    Afbeelding
                </th>
                <th>
                    Antwoord 1
                </th>
                <th>
                    Antwoord 2
                </th>
                <th>
                    Antwoord 3
                </th>
                <th>
                    Het juiste antwoord
                </th>
                <th>
                    Jouw gekozen antwoord
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var question in questions)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => question.QuestionText)
                    </td>
                    <td>
                        <a href="@Html.DisplayFor(modelItem => question.ImageUrl)" target="_blank">Bekijken</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => question.AnswerOne)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => question.AnswerTwo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => question.AnswerThree)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => question.CorrectAnswer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => question.ChosenAnswer)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>